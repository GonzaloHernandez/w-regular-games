{
    "tasks": [
        // --------------------------------------------------------------
        {
            "type": "cppbuild",
            "label": "C/C++: build standard",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++11",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${workspaceFolder}/build/${fileBasenameNoExtension}",
                "-I${env:HOME}/.local/include",
                "-L${env:HOME}/.local/lib",
                "-lchuffed",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        // --------------------------------------------------------------
        {
            "type": "cppbuild",
            "label": "C/C++: build experiments",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++14",
                "-fdiagnostics-color=always",
                "-g",
                "-O0",
                "${workspaceFolder}/cppsrc/*.cpp",
                "-o",
                "${workspaceFolder}/build/experiments",
                "-I${env:HOME}/.local/include",
                "-L${env:HOME}/.local/lib",
                "-lchuffed",
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
    ],
    "version": "2.0.0"
}